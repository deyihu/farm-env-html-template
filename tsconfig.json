{
    "compilerOptions": {
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        // "noImplicitAny": true,
        "declaration": true,
        "allowJs": true,
        "module": "ES2015",
        "target": "es2021",
        "sourceMap": true,
        //dependencies lib version
        "lib": [
            "es5",
            "es2015",
            "dom"
        ],
        "outDir": "./dist",
        "baseUrl": "./",
        //custom types
    },
    "include": [
        "./index.ts",
         "./src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
}